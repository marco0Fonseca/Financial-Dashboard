generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./financialDashboard.db"
}

model User {
  id           String           @id @default(uuid())
  name         String
  email        String           @unique
  password     String
  
  transactionCategories TransactionCategory[]
  transactions Transaction[]
  investments Investment[]
}

enum TransactionType {
  COST
  GAIN
  INVESTMENT
}

model TransactionCategory {
  id           Int       @id @default(autoincrement())
  label        String
  type         TransactionType

  transactions Transaction[]
  investments  Investment[]

  userId       String
  user         User      @relation(fields: [userId], references: [id])
}

model Transaction {
  id           Int       @id @default(autoincrement())
  description  String?
  value        Float     
  date         DateTime
  recurrence   Boolean

  categoryId   Int
  category     TransactionCategory @relation(fields: [categoryId], references :[id])

  userId       String
  user         User @relation(fields: [userId], references: [id])
}

model Investment {
  id           Int       @id @default(autoincrement())
  description  String?
  value        Float     
  date         DateTime
  recurrence   Boolean
  
  rate           Float
  entrace        Float
  recurrenceAdd  Float
  monthsDuration Int

  categoryId   Int
  category     TransactionCategory @relation(fields: [categoryId], references :[id])

  userId       String
  user         User @relation(fields: [userId], references: [id])
}